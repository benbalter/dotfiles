#!/bin/bash

set -e

# Strap
if [[ -f "$HOME/Downloads/strap.sh" ]]; then
  bash ~/Downloads/strap.sh
fi

# Bootstrap dotfiles
if [[ ! -d "$HOME/.files" ]]; then
  git clone https://github.com/benbalter/dotfiles ~/.files
fi

# shellcheck source=lib/globals
source "$HOME/.files/lib/globals"

# shellcheck source=lib/functions
source "$DOTFILES_ROOT/lib/functions"

if [ "$TRAVIS" != "true" ]; then
  sudo -v
else
  sudo -n -v
fi

setups=(symlinks token homebrew ruby app-store dropbox dock atom node background-apps zsh chrome iterm app-store prey mackup)

for setup in "${setups[@]}"; do
  script/title "Setting up $setup"
  "script/setup/$setup"
done

# Remove strap.sh, which contains tokens
rm -f "$HOME/Downloads/strap.sh"

script/title "Fin."

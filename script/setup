#!/bin/sh

title () {
  echo "\n"
  echo "-------------------------------"
  echo $1
  echo "-------------------------------"
  echo "\n"
}

link() {
  if [ ! -f ~/$1 ] || [ $(ls -l ~/$1 | awk '{print $11}') != "/Users/benbalter/.files/$1" ]; then
    echo "Linking ~/$1 to ~/.files/$1"
    ln -sf ~/.files/$1 ~/$1
  fi
}

link .bash_profile
link .gitconfig
link .gitignore
link .irbrc
link .zshrc
link .Brewfile

if ! type "brew" > /dev/null; then
  title "Installing homebrew..."
  ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
  brew tap homebrew/bundle
fi

title "Setting up Homebrew..."
if ! brew bundle check --global; then
  brew bundle --global
fi

title "Setting up atom..."
link .atom/config.cson
apm install --packages-file ~/.files/.atom/packages.txt

title "Fin."
